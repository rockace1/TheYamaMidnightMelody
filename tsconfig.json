{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "./dist/core",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@types/node"
        ],
        "types": [
            "node",
            "webpack-env",
            "mocha",
            "chai"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/core/**/*",
        "src/core/main.ts",
        "src/core/preload.ts"
    ],
    "exclude": [
        "src/ui/**/*",
        "tests/core/**/*",
        "tests/ui/**/*",
        "node_modules"
    ]
}